<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/showActivityWindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Activity Window"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/dismissActivityWindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dismiss Activity Window"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/showApplicationWindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show App Window"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/dismissApplicationWindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dismiss App Window"
        android:textAllCaps="false" />
</LinearLayout>